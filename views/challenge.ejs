<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <header>
    </header>
    <main>

        <section id="started-challenge">

            <div id="challenge-description">
                <p><%= challenge.description %></p>
            </div>

            <div id="work-area">

                <form action="/users/<%=challenge.challenge_id%>/test" method="POST">
                <textarea name="solution" id="starter-code" cols="70" rows="40">
                    <%= challenge.solution? challenge.solution : challenge.starter_code %>
                </textarea>
                <input type="submit" value="check" onclick="checkResult()">
            </form>
                <button id="saveChallengeBtn">save to profile</button>
                <form action="/userchallenges" method="POST">
                    <input type="hidden" name="user_id" value="">
                    <input type="hidden" name="challenge_id" value="">
                    <input type="hidden" name="solution" value="">
                   <input type="submit" value="save"> 
                </form>
            </div>

        </section>


        <section id="results">
            <div id="result-failed-cases"></div>
            <div id="result-passed-cases"></div>
        </section>



    </main>
    <footer>
    </footer>
    <script src="/js/challenge.js"></script>
    <script>
        function checkResult() {

            fetch("http://localhost:4000/test", { method: "get" }).then(res => res.json()).then(response => {
                console.log(response);
                document.getElementById('result-failed-cases').innerText = response.stderr;
                document.getElementById('result-passed-cases').innerText = response.stdout;
            });
        }



    </script>
</body>

</html>